# Function to sample N consecutive sentences into one text
def sample_consecutive_sentences(sentences, n):
    sents = [sentences[random.randint(0, len(sentences) - 1)] for i in range(n)]
    sampled_text = '\n'.join(sents)
    return sampled_text

text = sample_consecutive_sentences(corpus, 1024)
with open("tiny-llm/corpuses/nature.txt", "w") as text_file:
    text_file.write(text)